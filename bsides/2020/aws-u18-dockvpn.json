{
    "variables": {
      "aws_access_key": "",
      "aws_secret_key": "",
      "azdo_build": ""
    },
    "builders": [
      {
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "us-east-1",
        "source_ami_filter": {
          "filters": {
            "virtualization-type": "hvm",
            "name": "ubuntu/images/hvm-ssd/ubuntu-bionic-18.04-amd64-server-*",
            "root-device-type": "ebs"
          },
          "owners": ["099720109477"],
          "most_recent": true
        },
        "instance_type": "t3a.nano",
        "ssh_username": "ubuntu",
        "ami_name": "aws-u18-dockvpn-{{timestamp}}"
      }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "./index.html",
            "destination": "/home/ubuntu/nginx"
        },
        {
          "type": "file",
          "source": "./Bsides2020.jpg",
          "destination": "/home/ubuntu/nginx"
      },
        {
            "type": "shell",
            "script": "./docker.sh"
        },
        {
            "type": "shell",
            "script": "./openvpn.sh"
        },
        {
            "type": "shell",
            "inline": ["whoami", "pwd", "ip a", "sudo apt-get update", "sudo apt-get upgrade -y"]
        },
        {
          "type": "shell",
          "script": "./awscli.sh"
        },
        {
          "type": "shell",
          "inline": ["sed -i 's/replaceme/{{ user `azdo_build` }}/g' /home/ubuntu/index.html"]
        } 
    ],
    "post-processors": [
      [
        {
          "output": "manifest.json",
          "strip_path": true,
          "type": "manifest"
        }
      ]
    ]
  }
  