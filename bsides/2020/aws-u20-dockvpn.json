{
    "variables": {
      "aws_access_key": "",
      "aws_secret_key": ""
    },
    "builders": [
      {
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "us-east-1",
        "source_ami_filter": {
          "filters": {
            "virtualization-type": "hvm",
            "name": "ubuntu/images/hvm-ssd/ubuntu-focal-20.04-arm64-server-20200907",
            "root-device-type": "ebs"
          },
          "owners": ["099720109477"],
          "most_recent": true
        },
        "instance_type": "t4g.nano",
        "ssh_username": "ubuntu",
        "ami_name": "aws-u20-dockvpn-{{timestamp}}"
      }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "./docker.sh"
        },
        {
            "type": "shell",
            "script": "./openvpn.sh"
        },
        {
            "type": "shell",
            "inline": ["whoami", "pwd", "ip a", "apt-get update -y"]
        }
    ]
  }
  